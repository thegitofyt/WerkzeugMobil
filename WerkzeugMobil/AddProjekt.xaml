<Window x:Class="WerkzeugMobil.AddProjekt"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:viewmodel="clr-namespace:WerkzeugMobil.MVVM.Viewmodel"
        Title="Add New Projekt"
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen"
        Background="#00254D" Width="1192">

    <Window.DataContext>
        <viewmodel:AddProjektViewModel />
    </Window.DataContext>

    <Grid>
        <!-- Header Section (Logo on the Left, Navigation on the Right) -->
        <Grid Background="#004D80" Height="80" VerticalAlignment="Top">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <!-- Logo -->
                <ColumnDefinition Width="*"/>
                <!-- Spacer (Pushes buttons to the right) -->
                <ColumnDefinition Width="auto"/>
                <!-- Navigation Bar -->
            </Grid.ColumnDefinitions>

            <!-- Logo on the Left -->
            <Image Source="pack://application:,,,/LogoRech.png" 
                   Width="150" Height="50" 
                   VerticalAlignment="Center" 
                   HorizontalAlignment="Left" 
                   Margin="20,0,0,0" UseLayoutRounding="True" />

            <!-- Navigation Bar on the Right -->
            <StackPanel Orientation="Horizontal" Grid.Column="2"
                        VerticalAlignment="Center" HorizontalAlignment="Right"
                        Margin="0,0,20,0">
                <Button Content="Werkzeug" Width="150" Height="40" Foreground="White" Background="Transparent"
                        Command="{Binding NavigateWerkzeugCommand}" Margin="10,0"/>
                <Button Content="Projekt" Width="150" Height="40" Foreground="White" Background="Transparent" Margin="10,0"/>
            </StackPanel>
        </Grid>

        <!-- Main Layout: Two Columns -->
        <Grid Margin="50,120,50,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>

            <!-- Project Input Form (Left Side) -->
            <Border Background="White" CornerRadius="10" Padding="40" Grid.Column="0" Margin="0,20,0,20">
                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="New Project" FontSize="20" FontWeight="Bold" Foreground="#004D80"
                               Margin="0,0,0,20" TextAlignment="Center"/>

                    <TextBlock Text="Projekt Adresse" FontSize="16" FontWeight="Bold" Margin="0,0,0,5"/>
                    <TextBox Text="{Binding Projekt.ProjektAddresse, UpdateSourceTrigger=PropertyChanged}" 
                             Height="40" FontSize="14" Background="#F0F0F0" BorderBrush="#CCCCCC" BorderThickness="1"/>

                    <!-- Spacer to push the button down -->
                    <StackPanel Height="30"/>

                    <Button Content="Submit" Command="{Binding SubmitCommand}" Height="45" FontSize="16"
                            Background="#004D80" Foreground="White" BorderThickness="0" 
                            Margin="0,10,0,0" Cursor="Hand"/>
                </StackPanel>
            </Border>

            <!-- Existing Projects List (Right Side) -->
            <Border Background="#E8F0F8" CornerRadius="10" Padding="30" Grid.Column="1" Margin="20,20,0,20">
                <StackPanel>
                    <TextBlock Text="Existing Projects" FontSize="18" FontWeight="Bold" Margin="0,0,0,20" />

                    <ListView ItemsSource="{Binding Projekte}" SelectedItem="{Binding SelectedProjekt}" 
                              BorderBrush="#CCCCCC" BorderThickness="1" Height="401" SelectionChanged="ListView_SelectionChanged">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Border BorderThickness="1" BorderBrush="#CCCCCC" Padding="10" Margin="5">
                                    <StackPanel>
                                        <TextBlock Text="{Binding ProjektAddresse}" FontSize="14" FontWeight="Bold"/>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>
