<Window x:Class="WerkzeugMobil.Lager"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:viewmodel="clr-namespace:WerkzeugMobil.MVVM.Viewmodel"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize"
        Title="Inventory View" Height="750" Width="1200" Background="#F5F5F5">

    <Window.DataContext>
        <viewmodel:LagerViewModel />
    </Window.DataContext>

    <!-- Define Resources -->
    <Window.Resources>
        <!-- Modern Button Style -->
        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Background" Value="#004D80"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#006F8E"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Modern TextBox Style -->
        <Style x:Key="ModernTextBoxStyle" TargetType="TextBox">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <!-- Modern DataGrid Style -->
        <Style x:Key="ModernDataGridStyle" TargetType="DataGrid">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="RowHeight" Value="35"/>
            <Setter Property="CellStyle">
                <Setter.Value>
                    <Style TargetType="DataGridCell">
                        <Setter Property="Padding" Value="10"/>
                        <Setter Property="VerticalAlignment" Value="Center"/>
                    </Style>
                </Setter.Value>
            </Setter>
            <Setter Property="ColumnHeaderStyle">
                <Setter.Value>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="#004D80"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="FontWeight" Value="Bold"/>
                    </Style>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <!-- Header Section -->
        <Border Height="80" VerticalAlignment="Top" Background="#004D80" BorderBrush="#004D80">
            <Grid>
                <!-- Logo -->
                <Image Source="pack://application:,,,/LogoRech.png"
                       Width="150" Height="50"
                       VerticalAlignment="Center" HorizontalAlignment="Left"
                       Margin="20,0,0,0" UseLayoutRounding="True"/>

                <!-- Filter Buttons -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,20,0">
                    <Button Content="In Lager"
                            Width="120" Height="40"
                            Style="{StaticResource ModernButtonStyle}"
                            Command="{Binding FilterInLagerCommand}"/>
                    <Button Content="Mit Adresse"
                            Width="120" Height="40"
                            Style="{StaticResource ModernButtonStyle}"
                            Command="{Binding FilterMitAdresseCommand}"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content Section -->
        <Grid Margin="20,100,20,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Search Bar -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10" Grid.Row="0" Grid.ColumnSpan="2">
                <TextBox Width="400" Height="40"
                         Style="{StaticResource ModernTextBoxStyle}"
                         Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                         Margin="0,0,10,0"/>
                <Button Content="Search"
                        Width="100" Height="40"
                        Style="{StaticResource ModernButtonStyle}"
                        Command="{Binding SearchCommand}"/>
                <Button Content="Reset"
                        Width="100" Height="40"
                        Style="{StaticResource ModernButtonStyle}"
                        Command="{Binding ResetCommand}"/>
            </StackPanel>

            <!-- Data Grid -->
            <DataGrid Grid.Row="1"
                      ItemsSource="{Binding Werkzeuge}"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      Style="{StaticResource ModernDataGridStyle}"
                      IsReadOnly="True"
                      SelectionMode="Single"
                      SelectionUnit="FullRow"
                      SelectedItem="{Binding SelectedWerkzeug, Mode=TwoWay}"
                      Grid.ColumnSpan="2">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Geräte Kennzahl" Binding="{Binding WerkzeugId}" Width="*" />
                    <DataGridTextColumn Header="Marke" Binding="{Binding Marke}" Width="*" />
                    <DataGridTextColumn Header="Art" Binding="{Binding Art}" Width="*" />
                    <DataGridTextColumn Header="Projekt Adresse" Binding="{Binding ProjektAdresse}" Width="*" />
                    <DataGridTextColumn Header="Beschreibung" Binding="{Binding Beschreibung}" Width="*" />
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </Grid>
</Window>