<Window x:Class="WerkzeugMobil.PasswordResetWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Passwort zurücksetzen" Height="300" Width="400"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid Margin="20">
        <StackPanel VerticalAlignment="Center">
            <TextBlock Text="Passwort zurücksetzen" FontWeight="Bold" FontSize="18" Margin="0,0,0,20" HorizontalAlignment="Center"/>

            <TextBlock Text="Bitte gib deine E-Mail-Adresse ein:" Margin="0,0,0,5"/>
            <TextBox x:Name="EmailInput" Height="30" Margin="0,0,0,20" Padding="5"/>

            <Button Content="Link zum Zurücksetzen senden"
                    Background="#007ACC" Foreground="White"
                    Click="SendResetLink"
                    Height="30"/>
        </StackPanel>
    </Grid>
</Window>
