<Window x:Class="WerkzeugMobil.MainNavigation"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:viewmodel="clr-namespace:WerkzeugMobil.MVVM.Viewmodel"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Device Interface" Height="750" Width="1200"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize"
        Background="#0B2E4A"
        FontFamily="Segoe UI">
    <Window.DataContext>
        <viewmodel:MainViewModel/>
    </Window.DataContext>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="1"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <Border Background="#102F4C" Grid.Column="0" Padding="20" VerticalAlignment="Stretch">
            <!-- DropShadowEffect for sidebar -->
            <Border.Effect>
                <DropShadowEffect Color="Black" Direction="270" ShadowDepth="1" BlurRadius="5"/>
            </Border.Effect>

            <!-- Using a Grid to ensure bottom placement of buttons -->
            <Grid VerticalAlignment="Stretch" >
                <!-- Content of the sidebar -->
                <StackPanel VerticalAlignment="Stretch">
                    <!-- Search Field with Border -->
                    <DockPanel Margin="0 0 0 20">
                        <Border Background="#1A3C5F" CornerRadius="5" Height="30" Width="140">
                            <TextBox Text="{Binding SearchTerm, UpdateSourceTrigger=PropertyChanged}"
                                     BorderThickness="0" Background="Transparent"
                                     Foreground="White" FontSize="14"
                                     VerticalContentAlignment="Center" Padding="5"/>
                        </Border>

                        <Button DockPanel.Dock="Right" Command="{Binding SearchCommand}"
                                Background="#1A3C5F" BorderBrush="#33475B" BorderThickness="1"
                                Width="30" Height="30" Margin="5" Cursor="Hand"
                                HorizontalContentAlignment="Center" VerticalContentAlignment="Center">
                            <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE721;" FontSize="16" Foreground="White"/>
                        </Button>
                    </DockPanel>

                    <!-- Werkzeug List -->
                    <ListBox ItemsSource="{Binding FilteredWerkzeuge}"
                             SelectedItem="{Binding SelectedWerkzeug, Mode=TwoWay}"
                             Background="#102F4C" BorderThickness="0" Foreground="White" Margin="0 0 0 20">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" Margin="0 0 0 10" Background="#1A3C5F">
                                    <TextBlock Text="{Binding WerkzeugId}" FontWeight="SemiBold"/>
                                    <TextBlock Text=" - "/>
                                    <TextBlock Text="{Binding Art}"/>
                                    <TextBlock Text=" ("/>
                                    <TextBlock Text="{Binding Marke}"/>
                                    <TextBlock Text=")"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </StackPanel>

                <!-- Action Buttons at Bottom -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="10">
                    <Button Width="50" Height="50" Background="#1A3C5F" BorderBrush="#33475B" BorderThickness="1"
                            Cursor="Hand" Click="Projekt_Click" Margin="5"
                            HorizontalContentAlignment="Center" VerticalContentAlignment="Center">
                        <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE77B;" FontSize="20" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    </Button>

                    <Button Width="50" Height="50" Background="#1A3C5F" BorderBrush="#33475B" BorderThickness="1"
                            Cursor="Hand" Click="Maschine_Lager" Margin="5"
                            HorizontalContentAlignment="Center" VerticalContentAlignment="Center">
                        <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE8A5;" FontSize="20" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    </Button>

                    <Button Width="50" Height="50" Background="#1A3C5F" BorderBrush="#33475B" BorderThickness="1"
                            Cursor="Hand" Click="PlusButton_Click" Margin="5"
                            HorizontalContentAlignment="Center" VerticalContentAlignment="Center">
                        <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xECC8;" FontSize="22" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    </Button>
                    
                    
                </StackPanel>
            </Grid>
        </Border>

        <!-- Sidebar Separator Line -->
        <Border Grid.Column="1" Background="#33475B" Width="1" />

        <!-- Main Content -->
        <Grid Grid.Column="2" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="1.2*"/>
            </Grid.ColumnDefinitions>
            

            <Border Background="#132F4C" CornerRadius="12" Padding="30" Grid.ColumnSpan="2">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>
                    
                    

                    <!-- Form Section -->
                    <StackPanel Margin="10" Grid.Column="0">
                        <TextBlock Text="Geräte Kennzahl" FontWeight="Bold" FontSize="14" Foreground="White" Margin="0 0 0 10"/>
                        <TextBox Text="{Binding currentWerkzeug.WerkzeugId, UpdateSourceTrigger=PropertyChanged}"
                                 IsReadOnly="True" Height="30" Background="#1A3C5F" BorderThickness="0"
                                 Foreground="White" Margin="0 0 0 15"/>

                        <TextBlock Text="Marke" FontWeight="Bold" FontSize="14" Foreground="White" Margin="0 0 0 10"/>
                        <TextBox Text="{Binding currentWerkzeug.Marke, UpdateSourceTrigger=PropertyChanged}"
                                 IsReadOnly="True" Height="30" Background="#1A3C5F" BorderThickness="0"
                                 Foreground="White" Margin="0 0 0 15"/>

                        <TextBlock Text="Art" FontWeight="Bold" FontSize="14" Foreground="White" Margin="0 0 0 10"/>
                        <TextBox Text="{Binding currentWerkzeug.Art, UpdateSourceTrigger=PropertyChanged}"
                                 IsReadOnly="True" Height="30" Background="#1A3C5F" BorderThickness="0"
                                 Foreground="White" Margin="0 0 0 15"/>

                        <TextBlock Text="Projekt Adresse" FontWeight="Bold" FontSize="14" Foreground="White" Margin="0 0 0 10"/>
                        <TextBox Text="{Binding currentWerkzeug.ProjektAdresse, UpdateSourceTrigger=PropertyChanged}"
                                 IsReadOnly="True" Height="30" Background="#1A3C5F" BorderThickness="0"
                                 Foreground="White" Margin="0 0 0 15"/>

                        <TextBlock Text="Beschreibung (optional)" FontWeight="Bold" FontSize="14" Foreground="White" Margin="0 0 0 10"/>
                        <TextBox Text="{Binding currentWerkzeug.Beschreibung, UpdateSourceTrigger=PropertyChanged}"
                                 IsReadOnly="True" Height="120" TextWrapping="Wrap" Background="#1A3C5F" BorderThickness="0"
                                 Foreground="White" Margin="0 0 0 15"/>
                     

                    </StackPanel>

                    <Button Width="50" Height="50" Background="#1A3C5F" BorderBrush="#33475B" BorderThickness="1"
Cursor="Hand" Click="BackButton_Click"
HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="268,584,268,0">
                        <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE72B;" FontSize="20" Foreground="White"
       VerticalAlignment="Bottom" HorizontalAlignment="Center"/>
                    </Button>


                    <!-- History Section -->
                    <Border Background="#1A3C5F" CornerRadius="10" Grid.Column="1" Padding="15">
                        <StackPanel>
                            <TextBlock Text="History" FontWeight="Bold" FontSize="14" Foreground="White" Margin="0 0 0 10"/>
                            <ListView ItemsSource="{Binding History}" Background="Transparent" BorderThickness="0"
                            Foreground="White" Height="200" Margin="0 0 0 20">
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <DockPanel LastChildFill="True">
                                            <TextBlock Text="{Binding}" TextWrapping="Wrap" Margin="0 0 0 5" DockPanel.Dock="Top"/>
                                            <!-- Use BorderBrush for the white line -->
                                            <Separator BorderBrush="White" BorderThickness="0,0,0,1" DockPanel.Dock="Bottom" />
                                        </DockPanel>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </StackPanel>

                    </Border>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>